<context>
  <input pattern="* (билет*) * сегодня">
    <context id="tickets_today">
      <output value="Вы хотите пойти в кино сегдня? Я правильно понял?"/>
      <input pattern="* да|именно|конечно|все так *">
      
        <context id="yes">
          <output value="Сколько билетов Вам нужно? Напишите цифрами, пожалуйста"/>
          </context>
            <input id="number_tickets" pattern="$Text">
				    <var name="userNumTickets" value="$Text" scope="user"/>

            <context id="number_tickets_usr">
               <output value="Сейчас посмотрю на какие сеансы есть нужное Вам количество билетов"/>
              <!--inspect tickets -->
                <output value="Выберите сеанс, на который вы хотите приобрести билеты"/>
                  <output>
                    <sample>
                      <item value="10.00 -  Самый лучший фильм"/>
                      <item value="12.00 - Самый страшный фильм"/>
                      <item value="14.00 - Самый смешной фильм"/>
                    </sample>
                  </output>
           </context>
          </input>
       </input>
        
     </context>
  </input>
</context>
